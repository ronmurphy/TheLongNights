{
  "name": "the-long-nights",
  "private": true,
  "version": "0.8.0",
  "type": "module",
  "main": "electron.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "copy-assets": "npm run copy-help && npm run copy-quest-images && npm run copy-data",
    "copy-help": "mkdir -p dist/assets/help && cp -r assets/help/*.md dist/assets/help/ 2>/dev/null || true",
    "copy-quest-images": "mkdir -p dist/assets/quest-images && cp -r assets/quest-images/* dist/assets/quest-images/ 2>/dev/null || true",
    "copy-data": "mkdir -p dist/data && cp -r assets/data/* dist/data/ 2>/dev/null || true",
    "preview": "vite preview",
    "start": "electron .",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build-web": "VITE_BASE=/VoxelWorld-1-vite/ npm run build",
    "build-electron-win": "node bump-version.cjs && npm run build && electron-builder --win",
    "build-electron-linux": "node bump-version.cjs && npm run build && electron-builder --linux",
    "build-electron-mac": "node bump-version.cjs && npm run build && electron-builder --mac",
    "build-wl": "node bump-version.cjs && npm run build && electron-builder --win --linux",
    "build-all": "node bump-version.cjs && npm run build && electron-builder --win --linux --mac"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "canvas": "^3.2.0",
    "concurrently": "^9.1.2",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.7",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "cannon-es": "^0.20.0",
    "drawflow": "^0.0.60",
    "electron-updater": "^6.1.7",
    "howler": "^2.2.4",
    "marked": "^16.4.0",
    "msgpack-lite": "^0.1.26",
    "pako": "^2.1.0",
    "stats.js": "^0.17.0",
    "three": "^0.180.0",
    "three-mesh-bvh": "^0.9.1"
  },
  "build": {
    "appId": "com.thelongnights.app",
    "productName": "TheLongNights",
    "artifactName": "${productName}-${version}.${ext}",
    "publish": {
      "provider": "github",
      "owner": "ronmurphy",
      "repo": "TheLongNights"
    },
    "directories": {
      "output": "dist-electron"
    },
    "asarUnpack": [
      "electron-preload.cjs",
      "dist/fonts/**/*",
      "dist/art/**/*",
      "dist/music/**/*",
      "dist/assets/**/*"
    ],
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "electron.cjs",
      "electron-preload.cjs"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}.exe"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Game"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
