      "type": "dialogue",
      "data": {
        "speaker": "narrator",
        "name": "The Long Nights",
        "text": "Before your journey begins, let us learn a bit about you...",
        "emoji": "âœ¨"
      }
    },
    {
      "id": "q1_survival",
      "type": "choice",
      "data": {
        "question": "What do you believe keeps someone alive in the wild?",
        "options": [
          "Strength to overcome any obstacle",
          "Speed to escape danger",
          "Endurance to outlast hardship",
          "Luck - being in the right place at the right time"
        ]
      }
    },
    {
      "id": "q2_gear",
      "type": "choice",
      "data": {
        "question": "If you could only carry one thing, what would it be?",
        "options": [
          "A sturdy weapon",
          "A reliable tool",
          "Something magical",
          "Food supplies"
        ]
      }
    },
    {
      "id": "q3_ancestry",
      "type": "choice",
      "data": {
        "question": "Which heritage calls to you?",
        "options": [
          "Human - adaptable and resourceful",
          "Elf - swift and graceful",
          "Dwarf - sturdy and resilient",
          "Goblin - cunning and fortunate"
        ]
      }
    },
    {
      "id": "q4_companion",
      "type": "choice",
      "data": {
        "question": "Who would you trust to watch your back?",
        "options": [
          "A scrappy fighter with something to prove",
          "A clever scavenger who knows the land",
          "A mysterious wanderer with hidden talents",
          "A loyal guardian who never gives up"
        ]
      }
    },
    {
      "id": "q5_gender",
      "type": "choice",
      "data": {
        "question": "How do you see yourself?",
        "options": [
          "Male",
          "Female",
          "Nonbinary",
          "Surprise me!"
        ]
      }
    },
